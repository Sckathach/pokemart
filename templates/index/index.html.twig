{% extends 'base.html.twig' %}

{% block title %}Pokémart{% endblock %}

{% block slider %}
    <section class="slider_section long_section">
        <div id="customCarousel" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <div class="container ">
                        <div class="row">
                            <div class="col-md-5">
                                <div class="detail-box">
                                    <h1>
                                        Pour redécorer <br>
                                        votre intérieur
                                    </h1>
                                    <p>
                                        Venez découvrir nos magnifiques peluches ! En plus, elles sont toutes douces.
                                    </p>
                                    <div class="btn-box">
                                        <a href="{{ path('plush_list_route') }}" class="btn1">
                                            Découvrir
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-7">
                                <div class="img-box">
                                    <img src="{{ asset('images/home/plushies.png') }}" alt="">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="container ">
                        <div class="row">
                            <div class="col-md-5">
                                <div class="detail-box">
                                    <h1>
                                        C'est encore <br>
                                        moi
                                    </h1>
                                    <p>
                                        Vous devriez vraiment cliquer sur ce bouton juste en dessous.
                                    </p>
                                    <div class="btn-box">
                                        <a href="{{ path('plush_list_route') }}" class="btn2">
                                            Le bouton en question
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-7">
                                <div class="img-box">
                                    <img src="{{ asset('images/home/plushies.png') }}" alt="">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="container ">
                        <div class="row">
                            <div class="col-md-5">
                                <div class="detail-box">
                                    <h1>
                                        JE TE VOIS <br>
                                    </h1>
                                    <p>
                                        JE CONNAIS TON IP {{ userIp }} : CLIQUE SINON CONSÉQUENCES
                                    </p>
                                    <div class="btn-box">
                                        <a href="{{ path('plush_list_route') }}" class="btn1">
                                            >>>CLIQUE<<<
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-7">
                                <div class="img-box">
                                    <img src="{{ asset('images/home/plushies.png') }}" alt="">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <ol class="carousel-indicators">
                <li data-target="#customCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#customCarousel" data-slide-to="1"></li>
                <li data-target="#customCarousel" data-slide-to="2"></li>
            </ol>
        </div>
    </section>
{% endblock %}

{% block client %}
    <section class="client_section layout_padding-bottom mt-5">
        <div class="container">
            <div class="heading_container">
                <h2>
                    Ils ont essayé !
                </h2>
            </div>
            <div id="carouselExample2Controls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    {% for comment in comments %}
                    <div class="carousel-item {% if loop.index == 1 %}active{% endif %}">
                        <div class="row">
                            <div class="col-md-11 col-lg-10 mx-auto">
                                <div class="box">
                                    <div class="img-box">
                                        <img src="{{ asset('images/clients/'~comment.member.id~'.png') }}" alt="" />
                                    </div>
                                    <div class="detail-box">
                                        <div class="name">
                                            <i class="fa fa-quote-left" aria-hidden="true"></i>
                                            <h6>
                                                {{ comment.member.name }}
                                            </h6>
                                        </div>
                                        <p>
                                            {{ comment.content }}
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
                <div class="carousel_btn-container">
                    <a class="carousel-control-prev" href="#carouselExample2Controls" role="button" data-slide="prev">
                        <i class="fa fa-long-arrow-left" aria-hidden="true"></i>
                        <span class="sr-only">Précédent</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExample2Controls" role="button" data-slide="next">
                        <i class="fa fa-long-arrow-right" aria-hidden="true"></i>
                        <span class="sr-only">Suivant</span>
                    </a>
                </div>
            </div>
        </div>
    </section>
{% endblock %}