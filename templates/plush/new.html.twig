        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="form_container">
                        <div class="heading_container">
                            <h2>
                                Ajouter
                            </h2>
                            <form action="{{ path('plush_new') }}" method="POST">
                                {{ form_row(form._token) }}
                                <div>
                                    {{ form_row(form.name) }}
                                </div>
                                <div>
                                    {{ form_row(form.price) }}
                                </div>
                                <div>
                                    {{ form_row(form.height) }}
                                </div>
                                <div>
                                    {{ form_row(form.note) }}
                                </div>
                                <div>
                                    {{ form_row(form.collection) }}
                                </div>
                                <div class="btn_box btn mt-3">
