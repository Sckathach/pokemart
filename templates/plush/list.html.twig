{% extends 'base.html.twig' %}

{% block title %}Pok√©mart{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block furniture %}
    <section class="furniture_section layout_padding">
        <div class="container">
            <div class="heading_container">
                <h2>
                    Les peluches
                </h2>
                <p>
                    Des peluches toutes plus adoraaaaaaaaaaables les unes que les autres !
                </p>
            </div>
            <div class="row">
            {% for plush in plushies %}
                <div class="col-md-6 col-lg-4">
                    <div class="box">
                        <div class="img-box">
                            <img src="{{ asset('images/plushies/' ~ plush.id ~ '.png') }}" alt="">
                        </div>
                        <div class="detail-box">
                            <h5>
                                {{ plush.name }}
                            </h5>
                            <div class="price_box">
                                <h6 class="price_heading">
                                    <span>$</span> {{ plush.price }}
                                </h6>
                                <a href="{{ path('plush_show_route') ~ "/" ~ plush.id }}">
                                    Acheter
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}

{% block about %}{% endblock %}
{% block blog %}{% endblock %}
{% block client %}{% endblock %}
{% block contact %}{% endblock %}
{% block info %}{% endblock %}

{% block scripts %}
    {{ parent() }}
{% endblock %}